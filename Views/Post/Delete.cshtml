@model SimpleFacebook.Models.Post

@{
    ViewData["Title"] = "Delete Post";
}

<h1>Delete Post</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this post?</h3>
</div>

<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
            <img src="@(string.IsNullOrEmpty(Model.User?.ProfilePicturePath) ? "/uploads/profile-pictures/default.png" : Model.User.ProfilePicturePath)" 
                 alt="Profile Picture" class="rounded-circle mr-2" style="width: 40px; height: 40px; object-fit: cover; margin-right: 10px;">
            <span>@Model.User?.Username</span>
        </div>
        <small class="text-muted">@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</small>
    </div>
    <div class="card-body">
        <p class="card-text">@Model.Content</p>
    </div>
    <div class="card-footer">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="PostId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>