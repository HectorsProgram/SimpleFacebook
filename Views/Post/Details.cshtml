@model SimpleFacebook.Models.Post

@{
    ViewData["Title"] = "Post Details";
}

<h1>Post Details</h1>

<div>
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <img src="@(string.IsNullOrEmpty(Model.User?.ProfilePicturePath) ? "/uploads/profile-pictures/default.png" : Model.User.ProfilePicturePath)" 
                     alt="Profile Picture" class="rounded-circle mr-2" style="width: 40px; height: 40px; object-fit: cover; margin-right: 10px;">
                <span>@Model.User?.Username</span>
            </div>
            <small class="text-muted">@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</small>
        </div>
        <div class="card-body">
            <p class="card-text">@Model.Content</p>
        </div>
        <div class="card-footer">
            @if (Model.UserId == Context.Session.GetInt32("UserId"))
            {
                <a asp-action="Edit" asp-route-id="@Model.PostId" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@Model.PostId" class="btn btn-danger">Delete</a>
            }
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>