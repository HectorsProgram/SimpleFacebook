@{
    ViewData["Title"] = "Profile";
    var firstPost = Model.FirstOrDefault();
    var profilePic = firstPost?.User?.ProfilePicturePath ?? "/images/default.png";
    var userName = firstPost?.User?.Username ?? "User";
}

@model IEnumerable<SimpleFacebook.Models.Post>


<div class="container mt-4">
    <!-- Cover Photo and Profile Header -->
    <div class="position-relative mb-4" style="background-color: #e9ecef; height: 220px; border-radius: 8px;">
        <button class="btn btn-light position-absolute end-0 mt-3 me-3">Edit Cover Photo</button>
<div class="position-absolute top-100 start-50 translate-middle" style="z-index:2;">
    <div class="rounded-circle border border-3 bg-white" style="width: 140px; height: 140px; margin-top: -70px; display: flex; align-items: center; justify-content: center; overflow: hidden;">
        <img src="@profilePic"
             alt="Profile Picture"
             class="img-fluid"
             style="width: 100%; height: 100%; object-fit: cover;">
    </div>
</div>
        <button class="btn btn-light position-absolute end-0 mt-5 me-3" style="top: 120px;">Edit Profile</button>
    </div>
    <div class="text-center" style="margin-top: 80px;">
        <h2>@userName</h2>
        <div class="d-flex justify-content-center gap-2 mb-3">
            <button class="btn btn-outline-secondary btn-sm">Add to Story</button>
            <button class="btn btn-outline-secondary btn-sm">Message</button>
        </div>
    </div>

    <!-- Navigation Tabs -->
    <ul class="nav nav-tabs mb-4 justify-content-center">
        <li class="nav-item">
            <a class="nav-link active" href="#">Intro</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">About</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">Friends</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">Photos</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">Videos</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">More</a>
        </li>
    </ul>

    <div class="row">
        <!-- Left Column -->
        <div class="col-md-3">
            <div class="card mb-3">
                <div class="card-header">Intro</div>
                <div class="card-body">
                    <div class="mb-2 bg-light rounded p-2" style="height: 20px;"></div>
                    <div class="mb-2 bg-light rounded p-2" style="height: 20px;"></div>
                    <div class="mb-2 bg-light rounded p-2" style="height: 20px;"></div>
                </div>
            </div>
            <div class="card mb-3">
                <div class="card-header">Friends <span class="float-end">32,0500</span></div>
                <div class="card-body d-flex flex-wrap gap-2">
                    @for (int i = 0; i < 6; i++)
                    {
                        <div class="bg-light rounded" style="width: 48px; height: 48px;"></div>
                    }
                </div>
            </div>
        </div>
        <!-- Center Column -->
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-header">Photos</div>
                <div class="card-body d-flex flex-wrap gap-2">
                    @for (int i = 0; i < 5; i++)
                    {
                        <div class="bg-light rounded" style="width: 70px; height: 70px;"></div>
                    }
                </div>
            </div>
<div class="card mb-3">
    <div class="card-header">Posts</div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            foreach (var post in Model)
            {
                            <li class="list-group-item">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <img src="@post.User?.ProfilePicturePath" alt="Profile Picture"
                                            class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                        <strong>@post.User?.Username</strong>
                                    </div>
                                    <small class="text-muted">@post.CreatedAt.ToString("g")</small>
                                </div>
                                <p class="mb-1">@post.Content</p>
                            </li>
            }
        }
        else
        {
            <p class="text-muted">No posts available.</p>
        }
    </div>
</div>
        </div>
        <!-- Right Column -->
        <div class="col-md-3">
            <div class="card mb-3">
                <div class="card-header">People You May Know</div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-2">
                        <div class="bg-light rounded-circle me-2" style="width: 36px; height: 36px;"></div>
                        <div class="bg-light rounded p-2 flex-fill" style="height: 20px;"></div>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <div class="bg-light rounded-circle me-2" style="width: 36px; height: 36px;"></div>
                        <div class="bg-light rounded p-2 flex-fill" style="height: 20px;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
