@model List<Notification>

<ul style="list-style-type:none; padding:0; margin:0;">
    @if (Model.Any())
    {
        foreach (var notif in Model)
        {
            <li style="border-bottom:1px solid #ddd; padding:8px 0; @(notif.IsRead ? "" : "font-weight:bold;")">
                <strong>
                    @(notif.Type ?? "Notification")
                </strong><br />
                @notif.Sender.Username @notif.Message<br />
                <small style="color:gray;">
                    @notif.CreatedAt.ToLocalTime().ToString("g") <!-- Or use relative time lib in JS later -->
                </small>
            </li>
        }
    }
    else
    {
        <li style="padding:8px 0; text-align:center; color:gray;">
            No notifications.
        </li>
    }
</ul>
