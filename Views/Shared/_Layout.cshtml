<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SimpleFacebook</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .navbar {
            background-color: #1877f2;
        }

        .navbar .nav-link,
        .navbar .navbar-brand,
        .navbar .btn {
            color: white !important;
        }

        .navbar .form-control {
            width: 300px;
        }

        .navbar .btn:hover {
            background-color: #165ec9;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark box-shadow">
            <div class="container-fluid d-flex align-items-center justify-content-between">
                <!-- Brand -->
                <a class="navbar-brand font-weight-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    SimpleFacebook
                </a>

                <!-- Search bar -->
                <form class="form-inline mx-auto" method="get" asp-controller="Search" asp-action="Results">
                    <input class="form-control mr-sm-2" type="search" name="query" placeholder="Search SimpleFacebook..." aria-label="Search">
                    <button class="btn btn-light my-2 my-sm-0" type="submit">Search</button>
                </form>

                <!-- Buttons -->
                <ul class="navbar-nav flex-row gap-2">
                    <li class="nav-item px-2">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item px-2">
                        <a class="nav-link" asp-area="" asp-controller="Profile" asp-action="Index">Profile</a>
                    </li>

<div class="dropdown">
  <button class="btn btn-secondary dropdown-toggle" type="button" id="notificationsDropdown" data-bs-toggle="dropdown" aria-expanded="false">
    🔔 Notifications
  </button>
  <ul class="dropdown-menu" aria-labelledby="notificationsDropdown">
    <li><a class="dropdown-item" href="#">Notification 1</a></li>
    <li><a class="dropdown-item" href="#">Notification 2</a></li>
    <li><a class="dropdown-item" href="#">Notification 3</a></li>
  </ul>
</div>


                    <li class="nav-item px-2">
                        <a class="nav-link" asp-controller="User" asp-action="Logout">Logout</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container">
            &copy; 2024 - SimpleFacebook - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
